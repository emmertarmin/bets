---
import Layout from '@/layouts/Layout.astro';
import euro2024_logo from '/assets/logos/UEFA_Euro_2024.svg?raw';

---

<Layout title='Login'>
  <main class='flex pt-[10%] px-3 justify-center'>
    <form id='login-form' hx-post='/api/auth/login' hx-target='#response' class='flex flex-col items-center w-full'>
      <h1 class='text-5xl mb-5' aria-label="Euro 2024 Logo">
        <Fragment set:html={euro2024_logo} />
      </h1>
      <div class='mb-10'>
        Prediction Game
      </div>
      <div class="w-full sm:w-96">
        <div class='mb-4 w-full'>
          <label for='email' class='block text-sm text-slate-300'>Email</label>
          <input
            type='email'
            id='email'
            name='email'
            required
            class='mt-1 p-2 w-full bg-transparent border border-slate-400 rounded-md'
          />
        </div>
        <div class='mb-4 w-full'>
          <label for='password' class='block text-sm text-slate-300'>Password</label>
          <input
            type='password'
            id='password'
            name='password'
            required
            class='mt-1 p-2 w-full bg-transparent border border-slate-400 rounded-md'
          />
        </div>
        <button type='submit' class='w-full bg-gradient-to-r from-purple-600 to-violet-900 hover:from-purple-500 hover:to-violet-800 rounded-md p-3 mt-3 transition-colors'>Login</button>
        <div class='mt-4 text-slate-300'>
          Don't have an account?<a href='/register' class='text-purple-400 ml-2'>Register</a>
        </div>
      </div>
      <div id='response' class='mt-4 text-amber-400'></div>
    </form>
  </main>
</Layout>