---
import Layout from "@/layouts/Layout.astro";
---

<Layout title="Login">
  <main class="h-screen w-screen flex pt-[10%] justify-center bg-gradient-to-r from-violet-900 to-slate-900 text-white">
    <form id="login-form" hx-post="/api/auth/login" hx-target="#response" class="flex flex-col items-center w-96">
      <div class="text-5xl mb-5">
        Euro 2024
      </div>
      <div class="mb-10">
        Prediction Game
      </div>
      <div class="mb-4 w-full">
        <label for="email" class="block text-sm text-slate-300">Email</label>
        <input 
          type="email" 
          id="email" 
          name="email" 
          required 
          class="mt-1 p-2 w-full bg-transparent border border-slate-400 rounded-md" 
        />
      </div>
      <div class="mb-4 w-full">
        <label for="password" class="block text-sm text-slate-300">Password</label>
        <input 
          type="password" 
          id="password" 
          name="password" 
          required 
          class="mt-1 p-2 w-full bg-transparent border border-slate-400 rounded-md" 
        />
      </div>
      <button type="submit" class="bg-purple-600 p-3 w-full rounded-md mt-3">Login</button>
      <div class="mt-4 text-slate-300">
        Don't have an account?<a href="/auth/register" class="text-purple-400 ml-2">Register</a>
      </div>
      <div id="response" class="mt-4"></div>
    </form>
  </main>
</Layout>